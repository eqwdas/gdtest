page{
  background-color: rgb(245, 245, 245);
}
.items{
  background-color: rgb(255, 255, 255);
  margin-bottom: 20rpx;
}
.items_title{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  padding: 0 20rpx;
  border-bottom: 2rpx rgb(240, 240, 240) solid;
}
.items_body{
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.items_body_image{
  width: 204rpx;
  height: 204rpx;
  margin: 0 20rpx;
}
.items_body_right{
  width: 408rpx;
  height: 204rpx;
}
.items_body_right_title{
  height: 72rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.items_body_right_bottom{
  height: 112rpx;
  display: flex;
  align-items: flex-end;
}
.items_body_right_bottom_1{
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 20rpx;
  background-color: rgb(255,90,90);
  color: rgb(255, 255, 255);
  border-radius: 4rpx;
}
.items_body_right_bottom_2{
  width: 250rpx;
  height: 28rpx;
  line-height: 28rpx;
  font-size: 26rpx;
  overflow: hidden;
  color: rgb(255,90,90);
}
.items_body_right_bottom_3{
  /* width: 100rpx; */
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  height: 50rpx;
  line-height: 32rpx;
  font-size: 30rpx;
  color: rgb(127,127,127);
}
.items_body_right_bottom_3_text1{
  width:50rpx; 
  height: 60rpx;
  display: flex;
  align-items: flex-end;
}
.items_body_right_bottom_3_text2{
  width:50rpx; 
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: flex-end;
}